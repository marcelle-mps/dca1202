//PRIMEIRA FUNÇÃO:

#include <stdio.h>
#include <time.h>
#include <limits.h>
#include <math.h>
#include <stdlib.h>

void sortBySize (float *x, int size){
    
    clock_t t1, t2;
    int i, j;
    float temporary;
    
    temporary = 0.0;
    
    for(i=0; i<size; i++){
        for(j=i+1; j<size; j++){
            if(x[i] > x[j]){
                temporary = x[i];
                x[i] = x[j];
                x[j] = temporary;
            }
        }
    }
    
}

int main(){
    
    int i, size;
    float *x;
 	 
 	printf("What's the size of your vector? ");
    scanf("%d", &size);
 	 
 	 x = (float*) malloc(size * sizeof(float));
 	
 	printf("Input the numbers of your vector: ");
 	 for(i=0; i<size; i++){
 	     scanf("%f", &x[i]);
 	 }
 	 
 	 t1 = clock();
 	 sortBySize(x, size);
 	 t2 = clock()-t1;
  printf ("%d clicks (%f s).\n",
          t2,
          ((float)t2)/CLOCKS_PER_SEC);
          
 	 printf("%.4f", x[0]);
 	 for(i=1; i<size; i++){
 	     printf(", %.4f", x[i]);
 	 }
 	 
 	 free(x);
 	
}

