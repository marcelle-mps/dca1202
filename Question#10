#include <stdio.h>
#include <stdlib.h>

int main(){
    
 	 int i;
 	 
 	 //Um em um
 	 char x[4];

 	 for(i = 1; i < 5; i++){
 	     x[i] = i;
 	     printf(" %d -> %d\n", x[i], &x[i]);
 	 }
 	     
 	 //Dois em dois
 	 int y[4];

 	 for(i = 1; i < 5; i++){
 	     y[i] = i;
 	     printf(" %d -> %d\n", y[i], &y[i]);
 	 }
 	 
 	 //Quatro em quatro
	 float z[4];

 	 for(i = 1; i < 5; i++){
 	     z[i] = i;
 	     printf(" %d -> %d\n", z[i], &z[i]);
 	 }
 	 
 	 //Oito em oito
 	 double k[4];

 	 for(i = 1; i < 5; i++){
 	     k[i] = i;
 	     printf(" %d -> %d\n", k[i], &k[i]);
 	 }
 	
}
